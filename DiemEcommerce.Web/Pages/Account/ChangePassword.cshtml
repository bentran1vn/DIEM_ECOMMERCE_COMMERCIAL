@page
@model DiemEcommerce.Web.Pages.Account.ChangePasswordModel
@{
ViewData["Title"] = "Change Password";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-primary">Change Password</h1>
            <p class="text-gray-600 mt-2">Create a new secure password for your account</p>
        </div>

        <div class="card">
            <div class="card-body py-6">
                @if (Model.SuccessMessage != null)
                {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">
                                @Model.SuccessMessage
                            </p>
                        </div>
                    </div>
                </div>
                }

                <form method="post" id="changePasswordForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4 p-2 bg-red-50 rounded border-l-4 border-red-500 text-sm"></div>

                    <div class="mb-4">
                        <label asp-for="Input.NewPassword" class="form-label">New Password</label>
                        <div class="relative">
                            <input asp-for="Input.NewPassword" class="form-input pr-10" type="password" autocomplete="new-password" />
                            <button type="button" id="toggleNewPassword" class="absolute inset-y-0 right-0 px-3 py-2 text-gray-500">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="form-error"></span>
                        <div class="text-xs text-gray-500 mt-1">Password must be at least 6 characters long</div>
                    </div>

                    <div class="mb-6">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <div class="relative">
                            <input asp-for="Input.ConfirmPassword" class="form-input pr-10" type="password" autocomplete="new-password" />
                            <button type="button" id="toggleConfirmPassword" class="absolute inset-y-0 right-0 px-3 py-2 text-gray-500">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="form-error"></span>
                    </div>

                    <div>
                        <button type="submit" id="changeButton" class="btn btn-primary w-full">
                            <span id="buttonText">Change Password</span>
                            <span id="buttonSpinner" class="spinner ml-2 hidden"></span>
                        </button>
                    </div>

                    <div class="flex justify-between items-center mt-6">
                        <a asp-page="/Account/Profile" class="text-primary hover:underline">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                                </svg>
                                Back to Profile
                            </div>
                        </a>
                        <a asp-page="/Index" class="text-gray-500 hover:underline">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                                </svg>
                                Home
                            </div>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    // Toggle password visibility
    function setupPasswordToggle(buttonId, inputId) {
        document.getElementById(buttonId).addEventListener('click', function() {
            const passwordInput = document.getElementById(inputId);
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                this.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                        </svg>
                    `;
            } else {
                passwordInput.type = 'password';
                this.innerHTML = `
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    `;
            }
        });
    }

    setupPasswordToggle('toggleNewPassword', 'Input_NewPassword');
    setupPasswordToggle('toggleConfirmPassword', 'Input_ConfirmPassword');

    // Show loading spinner on form submit
    document.getElementById('changePasswordForm').addEventListener('submit', function() {
        document.getElementById('buttonText').classList.add('hidden');
        document.getElementById('buttonSpinner').classList.remove('hidden');
        document.getElementById('changeButton').disabled = true;
    });

    // Password strength checker
    const passwordInput = document.getElementById('Input_NewPassword');
    passwordInput.addEventListener('input', function() {
        // This is a simple strength checker, you can make it more complex
        const password = this.value;
        const strengthText = document.querySelector('.text-xs.text-gray-500.mt-1');

        if (password.length === 0) {
            strengthText.innerHTML = 'Password must be at least 6 characters long';
            strengthText.className = 'text-xs text-gray-500 mt-1';
        } else if (password.length < 6) {
            strengthText.innerHTML = 'Password is too short';
            strengthText.className = 'text-xs text-red-500 mt-1';
        } else if (password.length < 8) {
            strengthText.innerHTML = 'Password strength: Weak';
            strengthText.className = 'text-xs text-orange-500 mt-1';
        } else if (password.length < 10) {
            strengthText.innerHTML = 'Password strength: Medium';
            strengthText.className = 'text-xs text-yellow-500 mt-1';
        } else {
            strengthText.innerHTML = 'Password strength: Strong';
            strengthText.className = 'text-xs text-green-500 mt-1';
        }
    });
</script>
}