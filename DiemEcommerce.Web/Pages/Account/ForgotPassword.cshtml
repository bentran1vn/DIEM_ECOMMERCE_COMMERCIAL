@page
@model DiemEcommerce.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
        <div class="card">
            <div class="card-header">
                <h1 class="text-xl font-semibold">Forgot Password</h1>
            </div>
            <div class="card-body">
                @if (Model.EmailSent)
                {
                    <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <p class="text-sm text-green-700">
                                    Verification code has been sent to your email. Please check your inbox.
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <form method="post" asp-page-handler="VerifyCode">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="mb-4">
                            <label asp-for="Code" class="form-label">Verification Code</label>
                            <input asp-for="Code" class="form-input" />
                            <span asp-validation-for="Code" class="form-error"></span>
                        </div>
                        
                        <div>
                            <button type="submit" class="btn btn-primary w-full">Verify Code</button>
                        </div>
                    </form>
                }
                else
                {
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <div class="mb-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-input" type="email" />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>
                        
                        <div>
                            <button type="submit" class="btn btn-primary w-full">Send Reset Code</button>
                        </div>
                    </form>
                }
                
                <div class="text-center mt-4">
                    <a asp-page="./Login" class="text-primary hover:underline">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}