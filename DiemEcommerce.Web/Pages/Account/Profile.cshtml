@page
@model DiemEcommerce.Web.Pages.Account.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="card">
            <div class="card-header">
                <h1 class="text-xl font-semibold">My Profile</h1>
            </div>
            <div class="card-body">
                @if (Model.Profile != null)
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <div class="mb-6">
                                <h2 class="text-lg font-medium mb-4">Account Information</h2>
                                <div class="space-y-3">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">Email</label>
                                        <div class="text-gray-900">@Model.Profile.Email</div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">Username</label>
                                        <div class="text-gray-900">@Model.Profile.Username</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                <h2 class="text-lg font-medium mb-4">Account Actions</h2>
                                <div class="space-y-3">
                                    <div>
                                        <a asp-page="./ChangePassword" class="btn btn-outline-primary">Change Password</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div>
                            <div class="mb-6">
                                <h2 class="text-lg font-medium mb-4">Personal Information</h2>
                                <div class="space-y-3">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">First Name</label>
                                        <div class="text-gray-900">@Model.Profile.Firstname</div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">Last Name</label>
                                        <div class="text-gray-900">@Model.Profile.Lastname</div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">Phone Number</label>
                                        <div class="text-gray-900">@Model.Profile.Phonenumber</div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-500">Member Since</label>
                                        <div class="text-gray-900">@Model.Profile.CreatedOnUtc.ToString("MMMM dd, yyyy")</div>
                                    </div>
                                </div>
                            </div>
                            
                            @if (Model.Profile.Subcription != null)
                            {
                                <div>
                                    <h2 class="text-lg font-medium mb-4">Subscription</h2>
                                    <div class="space-y-3">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-500">Plan</label>
                                            <div class="text-gray-900">@Model.Profile.Subcription.SubscriptionName</div>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-500">Expiry Date</label>
                                            <div class="text-gray-900">@Model.Profile.Subcription.SubscriptionEndDate.ToString("MMMM dd, yyyy")</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-gray-500 mb-4">Unable to load profile information.</p>
                        <a asp-page="/Index" class="btn btn-primary">Return to Home</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>