@page
@model DiemEcommerce.Web.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Your Cart</h1>

    @if (Model.Cart.Items.Any())
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2">
                <div class="card">
                    <div class="card-header">
                        <h2 class="font-medium">Cart Items (@Model.Cart.TotalItems)</h2>
                    </div>
                    <div class="divide-y divide-gray-100">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="p-4 flex items-center">
                                <div class="w-20 h-20 rounded overflow-hidden flex-shrink-0">
                                    <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-full object-cover">
                                </div>
                                <div class="ml-4 flex-grow">
                                    <h3 class="font-medium">@item.Name</h3>
                                    <p class="text-sm text-gray-500">@item.FactoryName</p>
                                    <div class="mt-1 text-primary font-medium">$@item.Price</div>
                                </div>
                                <div class="flex items-center">
                                    <form method="post" class="flex items-center border border-gray-300 rounded-md">
                                        <input type="hidden" name="matchId" value="@item.MatchId">
                                        <button type="submit" asp-page-handler="DecrementQuantity" class="px-3 py-1 bg-gray-100 border-r border-gray-300">-</button>
                                        <span class="w-10 text-center">@item.Quantity</span>
                                        <button type="submit" asp-page-handler="IncrementQuantity" class="px-3 py-1 bg-gray-100 border-l border-gray-300">+</button>
                                    </form>
                                    <form method="post" class="ml-4">
                                        <input type="hidden" name="matchId" value="@item.MatchId">
                                        <button type="submit" asp-page-handler="RemoveItem" class="text-gray-400 hover:text-danger">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="card sticky top-20">
                    <div class="card-header">
                        <h2 class="font-medium">Order Summary</h2>
                    </div>
                    <div class="card-body">
                        <div class="space-y-4">
                            <div class="flex justify-between">
                                <span>Subtotal</span>
                                <span>$@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                            <div class="flex justify-between">
                                <span>Shipping</span>
                                <span>Free</span>
                            </div>
                            <div class="border-t pt-4 flex justify-between font-bold">
                                <span>Total</span>
                                <span>$@Model.Cart.TotalPrice.ToString("0.00")</span>
                            </div>
                        </div>
                        
                        <div class="mt-6">
                            <a asp-page="/Cart/Checkout" class="btn btn-primary w-full">Proceed to Checkout</a>
                        </div>
                        
                        <div class="mt-4">
                            <a asp-page="/Matches/Index" class="text-primary hover:underline text-sm flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75L3 12m0 0l3.75-3.75M3 12h18" />
                                </svg>
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-12">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto text-gray-400 mb-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
                </svg>
                <h2 class="text-2xl font-bold mb-2">Your cart is empty</h2>
                <p class="text-gray-500 mb-4">Looks like you haven't added any matches to your cart yet.</p>
                <a asp-page="/Matches/Index" class="btn btn-primary">Shop Now</a>
            </div>
        </div>
    }
</div>