<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diem Ecommerce</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.1/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-50 text-gray-900 min-h-screen flex flex-col">
<header class="bg-white shadow-sm sticky top-0 z-20">
    <div class="container mx-auto px-4 md:px-6 flex items-center justify-between h-16">
        <div class="flex items-center">
            <a asp-page="/Index" class="flex items-center">
                <span class="text-primary text-xl font-bold">DIEM</span>
                <span class="ml-1 text-accent text-lg font-semibold">Ecommerce</span>
            </a>
        </div>

        <div class="hidden md:flex items-center space-x-6">
            <a asp-page="/Index" class="text-gray-600 hover:text-primary transition-colors">Home</a>
            <a asp-page="/Matches/Index" class="text-gray-600 hover:text-primary transition-colors">Matches</a>
            <a asp-page="/Factories/Index" class="text-gray-600 hover:text-primary transition-colors">Factories</a>
            <partial name="_LoginPartial" />
        </div>

        <div class="flex items-center md:hidden">
            <div x-data="{ open: false }">
                <button @@click="open = !open" class="p-2 text-gray-500 hover:text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>

                <div x-show="open"
                     x-transition:enter="transition ease-out duration-200"
                     x-transition:enter-start="opacity-0 scale-95"
                     x-transition:enter-end="opacity-100 scale-100"
                     x-transition:leave="transition ease-in duration-150"
                     x-transition:leave-start="opacity-100 scale-100"
                     x-transition:leave-end="opacity-0 scale-95"
                     class="absolute right-0 top-16 w-full bg-white shadow-lg z-50 p-4 origin-top-right"
                     @@click.away="open = false">
                    <div class="flex flex-col space-y-4">
                        <a asp-page="/Index" class="text-gray-600 hover:text-primary transition-colors">Home</a>
                        <a asp-page="/Matches/Index" class="text-gray-600 hover:text-primary transition-colors">Matches</a>
                        <a asp-page="/Factories/Index" class="text-gray-600 hover:text-primary transition-colors">Factories</a>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<main class="flex-grow">
    @RenderBody()
</main>

<footer class="bg-gray-800 text-white py-8">
    <div class="container mx-auto px-4 md:px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-lg font-bold mb-4">DIEM Ecommerce</h3>
                <p class="text-gray-300">Your trusted platform for buying matchsticks from factories around the world.</p>
            </div>
            <div>
                <h3 class="text-lg font-bold mb-4">Quick Links</h3>
                <ul class="space-y-2">
                    <li><a asp-page="/Index" class="text-gray-300 hover:text-white">Home</a></li>
                    <li><a asp-page="/Matches/Index" class="text-gray-300 hover:text-white">Matches</a></li>
                    <li><a asp-page="/Factories/Index" class="text-gray-300 hover:text-white">Factories</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-lg font-bold mb-4">Contact</h3>
                <address class="text-gray-300 not-italic">
                    <p>Email: support@diemecommerce.com</p>
                    <p>Phone: +1 (123) 456-7890</p>
                </address>
            </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-4 text-center text-gray-300">
            <p>&copy; @DateTime.Now.Year - DIEM Ecommerce. All rights reserved.</p>
        </div>
    </div>
</footer>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>